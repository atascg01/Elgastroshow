<main class="container mx-auto px-4 py-8">
  <div class="max-w-lg mx-auto bg-white p-6 sm:p-8 rounded-xl shadow-lg">
    <h1 class="text-3xl sm:text-4xl font-bold mb-8 text-center">Cena Cluedo</h1>

    <div id="passwordForm" class="mb-6">
      <div class="mb-6">
        <input
          type="password"
          id="password"
          class="w-full px-6 py-4 text-lg border-2 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500"
          placeholder="Introduce el codigo"
        />
      </div>

      <button
        id="submitBtn"
        class="w-full bg-blue-500 text-white text-lg font-semibold py-4 px-6 rounded-xl hover:bg-blue-600 transition-colors"
      >
        Enviar
      </button>

      <div
        id="errorMessage"
        class="mt-6 text-center hidden text-red-500 text-lg"
      >
      </div>
    </div>

    <div id="successMessage" class="hidden">
      <div class="flex justify-center">
        <img
          src="/whatsapp-conversation.jpg"
          alt="WhatsApp conversation"
          class="w-full rounded-xl shadow-lg"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</main>

<script>
  const CORRECT_PASSWORD = "245";

  const passwordForm = document.getElementById("passwordForm");
  const passwordInput = document.getElementById("password") as HTMLInputElement;
  const submitBtn = document.getElementById("submitBtn");
  const errorMessage = document.getElementById("errorMessage");
  const successMessage = document.getElementById("successMessage");

  submitBtn?.addEventListener("click", () => {
    if (!errorMessage || !successMessage || !passwordForm) return;

    const enteredPassword = passwordInput?.value;

    if (enteredPassword === CORRECT_PASSWORD) {
      passwordForm.classList.add("hidden");
      successMessage.classList.remove("hidden");
    } else {
      errorMessage.textContent = "Código incorrecto. Inténtalo de nuevo.";
      errorMessage.classList.remove("hidden");
    }
  });

  // Also handle Enter key press
  passwordInput?.addEventListener("keypress", (e) => {
    if (e.key === "Enter") {
      submitBtn?.click();
    }
  });
</script>
