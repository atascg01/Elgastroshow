<meta charset="UTF-8" />
<main
  class="min-h-screen flex items-center justify-center p-4 bg-gradient-to-br from-[#1a1a1a] to-[#2e2e2e] text-white font-serif"
>
  <div
    class="w-full max-w-md bg-[#2b2b2b] p-6 sm:p-8 rounded-3xl shadow-2xl border border-yellow-600/30"
  >
    <h1
      class="text-4xl sm:text-5xl font-bold mb-10 text-center text-yellow-400 tracking-wide drop-shadow-md"
    >
      Cena Cluedo
    </h1>

    <div id="passwordForm" class="space-y-6">
      <input
        type="password"
        id="password"
        class="w-full px-6 py-5 text-xl sm:text-2xl text-white bg-[#1f1f1f] border-2 border-yellow-600/50 rounded-xl focus:outline-none focus:ring-4 focus:ring-yellow-500/40 placeholder:text-gray-400 shadow-inner"
        placeholder="Introduce el código secreto..."
      />

      <button
        id="submitBtn"
        class="w-full bg-yellow-600 text-black text-xl sm:text-2xl font-semibold py-5 px-6 rounded-xl hover:bg-yellow-500 active:scale-95 transition-all shadow-lg tracking-wide"
      >
        Desbloquear Pista
      </button>

      <div
        id="errorMessage"
        class="text-center hidden text-red-400 text-lg sm:text-xl italic"
      >
      </div>
    </div>

    <div id="successMessage" class="hidden mt-10">
      <div class="flex justify-center">
        <img
          src="/whatsapp-conversation.jpg"
          alt="WhatsApp conversation"
          class="w-full rounded-2xl shadow-lg ring-2 ring-yellow-600/40"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</main>

<script>
  const CORRECT_PASSWORD = "245";

  const passwordForm = document.getElementById("passwordForm");
  const passwordInput = document.getElementById("password") as HTMLInputElement;
  const submitBtn = document.getElementById("submitBtn");
  const errorMessage = document.getElementById("errorMessage");
  const successMessage = document.getElementById("successMessage");

  submitBtn?.addEventListener("click", () => {
    if (!errorMessage || !successMessage || !passwordForm) return;

    const enteredPassword = passwordInput?.value;

    if (enteredPassword === CORRECT_PASSWORD) {
      passwordForm.classList.add("hidden");
      successMessage.classList.remove("hidden");
    } else {
      errorMessage.textContent = "Código incorrecto. Inténtalo de nuevo.";
      errorMessage.classList.remove("hidden");
    }
  });

  // Also handle Enter key press
  passwordInput?.addEventListener("keypress", (e) => {
    if (e.key === "Enter") {
      submitBtn?.click();
    }
  });
</script>
