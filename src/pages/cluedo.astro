<main class="min-h-screen flex items-center justify-center p-4">
  <div class="w-full max-w-xl bg-white p-8 rounded-2xl shadow-lg">
    <h1 class="text-4xl sm:text-5xl font-bold mb-12 text-center">
      Cena Cluedo
    </h1>

    <div id="passwordForm" class="mb-8">
      <div class="mb-8">
        <input
          type="password"
          id="password"
          class="w-full px-8 py-6 text-2xl border-2 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500"
          placeholder="Introduce el codigo"
        />
      </div>

      <button
        id="submitBtn"
        class="w-full bg-blue-500 text-white text-2xl font-semibold py-6 px-8 rounded-2xl hover:bg-blue-600 transition-colors"
      >
        Enviar
      </button>

      <div
        id="errorMessage"
        class="mt-8 text-center hidden text-red-500 text-xl"
      >
      </div>
    </div>

    <div id="successMessage" class="hidden">
      <div class="flex justify-center">
        <img
          src="/whatsapp-conversation.jpg"
          alt="WhatsApp conversation"
          class="w-full rounded-2xl shadow-lg"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</main>

<script>
  const CORRECT_PASSWORD = "245";

  const passwordForm = document.getElementById("passwordForm");
  const passwordInput = document.getElementById("password") as HTMLInputElement;
  const submitBtn = document.getElementById("submitBtn");
  const errorMessage = document.getElementById("errorMessage");
  const successMessage = document.getElementById("successMessage");

  submitBtn?.addEventListener("click", () => {
    if (!errorMessage || !successMessage || !passwordForm) return;

    const enteredPassword = passwordInput?.value;

    if (enteredPassword === CORRECT_PASSWORD) {
      passwordForm.classList.add("hidden");
      successMessage.classList.remove("hidden");
    } else {
      errorMessage.textContent = "Código incorrecto. Inténtalo de nuevo.";
      errorMessage.classList.remove("hidden");
    }
  });

  // Also handle Enter key press
  passwordInput?.addEventListener("keypress", (e) => {
    if (e.key === "Enter") {
      submitBtn?.click();
    }
  });
</script>
