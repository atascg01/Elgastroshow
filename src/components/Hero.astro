---
import Logo from "./Logo.astro";
import cartel from "../assets/cartel.jpg";
---

<section class="relative w-full min-h-screen flex items-center justify-center">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img
      src={cartel.src}
      alt="ElGastroShow cartel"
      class="w-full h-full object-cover"
    />
    <!-- Dark Overlay -->
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center w-full">
    <div class="mb-8">
      <Logo />
    </div>
    <a
      href="#tickets"
      class="inline-block bg-white text-primary font-semibold px-6 md:px-8 py-3 md:py-4 rounded-full text-base md:text-lg transform hover:scale-105 transition-transform duration-200"
    >
      Conseguir mis entradas
    </a>
  </div>
</section>
