---
import { Image } from "astro:assets";
import Logo from "./Logo.astro";
---

<section
  class="relative min-h-screen bg-gradient-to-b from-primary to-secondary overflow-hidden"
>
  <div
    class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1492684223066-81342ee5ff30?q=80')] bg-cover bg-center opacity-20"
  >
  </div>
  <div class="container mx-auto px-4 py-20 relative z-10">
    <div class="text-center">
      <div class="mb-8">
        <Logo />
      </div>
      <a
        href="#tickets"
        class="inline-block bg-white text-black border-4 border-black font-semibold px-8 py-4 rounded-full text-lg transform hover:scale-105 transition-transform duration-200"
      >
        Conseguir mis entradas
      </a>
    </div>
  </div>

  <div class="absolute bottom-0 left-0 w-full">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1440 320"
      class="w-full"
    >
      <path
        fill="#ffffff"
        fill-opacity="1"
        d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,112C672,96,768,96,864,112C960,128,1056,160,1152,160C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
      ></path>
    </svg>
  </div>
</section>
