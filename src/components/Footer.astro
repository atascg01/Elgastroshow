---
const currentYear = new Date().getFullYear();

const legalLinks = [
  { href: "/politica-privacidad", text: "Política de Privacidad" },
  { href: "/aviso-legal", text: "Aviso Legal" },
  { href: "/politica-cookies", text: "Política de Cookies" },
];

const socialLinks = [
  {
    href: "mailto:info@elgastroshow.com",
    icon: "fa-regular fa-envelope",
    label: "Envíanos un email",
  },
  {
    href: "https://instagram.com/elgastroshow",
    icon: "fa-brands fa-instagram",
    label: "Síguenos en Instagram",
  },
];

const sponsors = [
  {
    logo: "consentido-logo.png",
    instagram: "https://instagram.com/agencia.consentido",
    name: "Agencia Consentido",
  },
  {
    logo: "drumshow-logo.svg",
    instagram: "https://instagram.com/drumshow_",
    name: "Drumshow León",
  },
  {
    logo: "gastrotierrina-logo.png",
    instagram: "https://instagram.com/gastrotierrina",
    name: "Gastrotierrina",
  },
];
---

<footer class="bg-dark py-8 text-white">
  <div class="container mx-auto px-6">
    <div class="flex flex-col space-y-8">
      <!-- Mobile accordion sections -->
      <div
        class="flex flex-col space-y-8 md:flex-row md:justify-between md:items-center md:space-y-0"
      >
        <!-- Copyright notice -->
        <p class="text-base text-gray-400 text-center md:text-left">
          &copy; {currentYear} El GastroShow. Todos los derechos reservados.
        </p>

        <!-- Sponsors logos - Now horizontal on mobile -->
        <div
          class="flex flex-row items-center justify-center gap-4 md:flex-1 md:mx-4"
        >
          {
            sponsors.map((sponsor) => (
              <a
                href={sponsor.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="w-24 md:w-32 h-10 md:h-12 flex items-center justify-center transform hover:scale-110 transition-transform duration-300 min-w-[44px] min-h-[44px]"
                aria-label={`Visita el Instagram de ${sponsor.name}`}
              >
                <img
                  src={`./${sponsor.logo}`}
                  alt={`Logo de ${sponsor.name}`}
                  class={`w-full h-full object-contain filter ${
                    sponsor.logo === "drumshow-logo.svg"
                      ? "brightness-0 invert"
                      : ""
                  } opacity-70 hover:opacity-100 transition-opacity duration-300`}
                  loading="lazy"
                />
              </a>
            ))
          }
        </div>

        <!-- Social icons with enhanced touch targets -->
        <div class="flex justify-center gap-6">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                target={link.href.startsWith("http") ? "_blank" : undefined}
                rel={
                  link.href.startsWith("http")
                    ? "noopener noreferrer"
                    : undefined
                }
                class="w-[44px] h-[44px] flex items-center justify-center text-white/70 hover:text-primary transform hover:scale-110 transition-all duration-300"
                aria-label={link.label}
              >
                <i class={`${link.icon} text-2xl`} />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Navigation links with enhanced touch targets -->
      <nav class="flex flex-wrap justify-center gap-x-6 gap-y-4">
        <a
          href="/"
          class="text-base text-gray-400 hover:text-white transition-colors duration-200 min-w-[44px] min-h-[44px] flex items-center justify-center px-2"
        >
          Inicio
        </a>
        {
          legalLinks.map((link) => (
            <a
              href={link.href}
              class="text-base text-gray-400 hover:text-white transition-colors duration-200 min-w-[44px] min-h-[44px] flex items-center justify-center px-2"
            >
              {link.text}
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</footer>
