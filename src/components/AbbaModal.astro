<div
  id="abbaModal"
  class="fixed inset-0 z-50 hidden flex items-center justify-center p-4"
>
  <!-- Backdrop -->
  <div class="fixed inset-0 bg-black/50 backdrop-blur-sm"></div>

  <!-- Modal -->
  <div
    class="relative bg-white rounded-2xl shadow-2xl w-full max-w-lg max-h-screen overflow-auto p-6 sm:p-8"
  >
    <!-- Close button -->
    <button
      id="closeModal"
      class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 z-10"
      aria-label="Cerrar"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Image -->
    <div class="relative h-48 sm:h-64 overflow-hidden">
      <img
        src="./cartel-abba.jpg"
        alt="ABBA Show"
        class="w-full h-full object-cover"
      />
      <div class="absolute top-4 left-4 z-20">
        <span
          class="inline-block px-4 py-1 bg-gold text-white text-sm font-bold rounded-full"
          >Próximamente</span
        >
      </div>
    </div>

    <!-- Content -->
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4 abba-gradient-text">
        ¡Nuevo GastroShow: Edición ABBA!
      </h2>
      <p class="text-gray-600 mb-6">
        Prepárate para vivir una noche mágica con las legendarias canciones de
        ABBA. Una experiencia única que combina música, gastronomía y el glamour
        de los años 70.
      </p>
      <a
        href="/abba"
        class="inline-block px-8 py-3 bg-gold hover:bg-gold-dark text-white font-semibold rounded-full transition-all duration-300 transform hover:scale-105"
      >
        Descubre Más
      </a>
    </div>
  </div>
</div>

<style>
  .bg-gold {
    background-color: #ffd700;
  }

  .bg-gold-dark {
    background-color: #ffa500;
  }

  .abba-gradient-text {
    background: linear-gradient(135deg, #ffd700 0%, #ffa500 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  #abbaModal {
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.3s ease,
      visibility 0.3s ease;
  }

  #abbaModal.active {
    opacity: 1;
    visibility: visible;
  }

  #abbaModal > div {
    transform: scale(0.9);
    transition: transform 0.3s ease;
  }

  #abbaModal.active > div {
    transform: scale(1);
  }
</style>

<script>
  const modal = document.getElementById("abbaModal");
  const closeButton = document.getElementById("closeModal");

  // Show modal after a short delay
  setTimeout(() => {
    modal?.classList.remove("hidden");
    requestAnimationFrame(() => {
      modal?.classList.add("active");
    });
  }, 1500);

  // Close modal function
  const closeModal = () => {
    modal?.classList.remove("active");
    setTimeout(() => {
      modal?.classList.add("hidden");
    }, 300);
  };

  // Close on button click
  closeButton?.addEventListener("click", closeModal);

  // Close on backdrop click
  modal?.addEventListener("click", (e) => {
    if (e.target === modal) {
      closeModal();
    }
  });

  // Close on escape key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") {
      closeModal();
    }
  });

  // Store modal state in localStorage
  const hasSeenModal = localStorage.getItem("hasSeenAbbaModal");
  if (!hasSeenModal) {
    localStorage.setItem("hasSeenAbbaModal", "true");
  }
</script>
