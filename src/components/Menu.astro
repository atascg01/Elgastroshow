<style>
  .menu-section {
    background: linear-gradient(135deg, #f6f8ff 0%, #f0f4ff 100%);
  }

  .magical-bg {
    position: absolute;
    inset: 0;
    background: radial-gradient(
        circle at 20% 20%,
        rgba(147, 197, 253, 0.15) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 80%,
        rgba(196, 181, 253, 0.15) 0%,
        transparent 50%
      );
    pointer-events: none;
  }

  .magical-title {
    background: linear-gradient(135deg, #4338ca 0%, #7c3aed 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
    padding-bottom: 0.2em;
  }

  .magical-title::after {
    content: "";
    position: absolute;
    width: 80px;
    height: 4px;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(90deg, #4338ca, #7c3aed);
    border-radius: 2px;
  }

  .menu-card {
    position: relative;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border-radius: 24px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .menu-card::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      45deg,
      rgba(147, 197, 253, 0.1),
      rgba(196, 181, 253, 0.1)
    );
    border-radius: 24px;
    z-index: 0;
  }

  .menu-card:hover {
    transform: translateY(-8px);
    box-shadow:
      0 20px 40px -15px rgba(67, 56, 202, 0.1),
      0 0 20px rgba(124, 58, 237, 0.1);
  }

  .menu-card-inner {
    position: relative;
    padding: 2.5rem;
    z-index: 1;
  }

  .gradient-text {
    background: linear-gradient(135deg, #4338ca 0%, #7c3aed 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .gradient-text-alt {
    background: linear-gradient(135deg, #7c3aed 0%, #ec4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .menu-item {
    position: relative;
    padding: 1rem;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.5);
    transition: all 0.3s ease;
  }

  .menu-item:hover {
    background: rgba(255, 255, 255, 0.8);
    transform: translateX(8px);
  }

  /* Kids Menu Specific Styles */
  .kids-menu {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.9),
      rgba(255, 255, 255, 0.8)
    );
  }

  .kids-item {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.7);
  }

  .kids-item-icon {
    font-size: 2rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    box-shadow: 0 4px 12px rgba(124, 58, 237, 0.1);
  }

  .kids-item-detail {
    display: block;
    font-size: 0.9rem;
    color: #7c3aed;
    margin-top: 0.5rem;
    font-style: italic;
  }

  .kids-menu-decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
    z-index: -1;
  }

  .magical-stars {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(
        2px 2px at 20px 30px,
        #ecc94b,
        rgba(0, 0, 0, 0)
      ),
      radial-gradient(2px 2px at 40px 70px, #f6ad55, rgba(0, 0, 0, 0)),
      radial-gradient(2px 2px at 50px 160px, #ecc94b, rgba(0, 0, 0, 0)),
      radial-gradient(2px 2px at 90px 40px, #f6ad55, rgba(0, 0, 0, 0)),
      radial-gradient(2px 2px at 130px 80px, #ecc94b, rgba(0, 0, 0, 0));
    background-repeat: repeat;
    animation: stars 4s linear infinite;
    opacity: 0.3;
  }

  @keyframes stars {
    from {
      transform: translateY(0);
    }
    to {
      transform: translateY(-100px);
    }
  }

  @keyframes shimmer {
    0% {
      background-position: -1000px 0;
    }
    100% {
      background-position: 1000px 0;
    }
  }

  .menu-card::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      60deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    background-size: 200% 100%;
    animation: shimmer 3s infinite linear;
    pointer-events: none;
  }
</style>
